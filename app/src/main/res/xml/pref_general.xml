<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="enable_alerts"
        android:defaultValue="true"
        android:title="@string/pref_title_alerts"
        android:persistent="true"/>

    <CheckBoxPreference
        android:key="enable_backup"
        android:defaultValue="true"
        android:title="@string/pref_title_backup"
        android:persistent="true"/>

    <CheckBoxPreference
        android:key="enable_tracking_lights"
        android:defaultValue="false"
        android:title="@string/pref_title_tracking_lights"
        android:persistent="true"/>

    <EditTextPreference
        android:key="host"
        android:title="Server Hostname"
        android:hint="localhost:3000"
        android:persistent="true"/>

</PreferenceScreen>
